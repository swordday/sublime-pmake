        <dict>
            <key>captures</key>
            <dict>
                <key>1</key>
                <dict>
                    <key>name</key>
                    <string>punctuation.definition.comment.xmake</string>
                </dict>
            </dict>
            <key>match</key>
            <string>(--)(?!\[\[).*$\n?</string>

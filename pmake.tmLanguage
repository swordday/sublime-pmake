            <string>\]\1\]</string>
            <key>name</key>
            <string>comment.block.xmake</string>
        </dict>
        <!-- Multiline comments (Garry's Lua) -->
        <dict>
            <key>begin</key>
            <string>/\*</string>
            <key>captures</key>
            <dict>
                <key>0</key>
                <dict>
                    <key>name</key>
                    <string>punctuation.definition.comment.xmake</string>
                </dict>
            </dict>
            <key>end</key>
            <string>\*/</string>
            <key>name</key>
